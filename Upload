<form id="preview-form" class="text-center space-y-6">
  <input type="file" accept="image/*" id="face-upload" required class="block mx-auto" />
  <button type="submit" class="bg-sky-500 text-white px-6 py-3 rounded-full">Preview Book Page</button>
</form>

<div id="preview-area" class="mt-8 hidden">
  <p class="text-lg mb-4">Hereâ€™s your storybook preview!</p>
  <img id="preview-result" src="" class="w-full max-w-xl mx-auto rounded-xl shadow" />
</div>

<script>
document.getElementById('preview-form').addEventListener('submit', async function(e) {
  e.preventDefault();
  const file = document.getElementById('face-upload').files[0];
  if (!file) return;

  const formData = new FormData();
  formData.append('file', file);

  // Replace with your AI image API endpoint
  const response = await fetch('https://your-face-swap-endpoint.com/api/swap', {
    method: 'POST',
    body: formData
  });

  const data = await response.json();
  document.getElementById('preview-result').src = data.modified_image_url;
  document.getElementById('preview-area').classList.remove('hidden');
});
</script>
